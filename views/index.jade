extends layout

block content
  .container
    .row
      .span12
        h1 LUNTEG
    .row
      .span12
        table(class='table table-striped table-bordered', id="video-table")
          tr
            th.num #
            th File Name
          each videoFile, index in mp4files
            tr
              td.num #{index}
              td
                a(href='/video/#{videoFile}', class='btn btn-large')
                  span #{videoFile}
                  i(class="icon-play")